#!/bin/sh
# Git pre-commit hook for Postman collection validation
# This script validates Postman collections before allowing commits

echo "ğŸ” Validating Postman collections before commit..."

# Check if postman directory exists
if [ ! -d "postman" ]; then
    echo "âœ… No Postman directory found, skipping validation"
    exit 0
fi

# Check if Node.js is available
if ! command -v node >/dev/null 2>&1; then
    echo "âš ï¸  Node.js not found, skipping Postman validation"
    echo "ğŸ’¡ Install Node.js to enable automatic validation"
    exit 0
fi

# Check if any Postman files are being committed
postman_files_changed=$(git diff --cached --name-only | grep "^postman/")

if [ -z "$postman_files_changed" ]; then
    echo "âœ… No Postman files changed, skipping validation"
    exit 0
fi

echo "ğŸ“ Postman files being committed:"
echo "$postman_files_changed"

# Run validation
cd postman
if node scripts/manage-postman.js validate; then
    echo "âœ… Postman collection validation passed"
    exit 0
else
    echo "âŒ Postman collection validation failed"
    echo "ğŸ’¡ Fix the validation errors before committing"
    echo "   Run: cd postman && node scripts/manage-postman.js validate"
    exit 1
fi
