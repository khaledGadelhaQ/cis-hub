# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cis_hub"

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-access-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH="./uploads"

# Email Configuration (Optional - for email verification and password reset)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@cis-hub.mans.edu.eg"

# CORS Configuration
CORS_ORIGIN="https://cis-hub.netlify.app"

# Rate Limiting (Optional)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# Cloud Storage (Optional - for production)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="cis-hub-files"

# Redis Configuration (for caching and queues)
REDIS_HOST="localhost"
REDIS_PORT=6379
# REDIS_PASSWORD="your-redis-password"
REDIS_CACHE_DB=0        # Database for caching
REDIS_QUEUE_DB=1        # Database for queues (separate from cache)

# Queue Configuration
QUEUE_CONCURRENCY_NOTIFICATIONS=10    # Max concurrent notification jobs
QUEUE_CONCURRENCY_CHAT_AUTOMATION=5   # Max concurrent chat automation jobs
QUEUE_CONCURRENCY_ACADEMIC_SYNC=3     # Max concurrent academic sync jobs
QUEUE_CONCURRENCY_EMAIL=2             # Max concurrent email jobs
QUEUE_CONCURRENCY_MONITORING=1        # Max concurrent monitoring jobs

# Queue Monitoring
QUEUE_DASHBOARD_ENABLED=true          # Enable Bull Dashboard for queue monitoring
QUEUE_DASHBOARD_PORT=3001             # Port for queue dashboard
QUEUE_DASHBOARD_USERNAME="admin"      # Dashboard basic auth username
QUEUE_DASHBOARD_PASSWORD="secure123"  # Dashboard basic auth password

# Logging
LOG_LEVEL="debug"
