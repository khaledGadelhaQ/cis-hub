NODE_ENV=staging
PORT=4000

# Database Configuration (Staging)
DATABASE_URL=postgresql://staging_user:staging_password@staging_host:5432/mu_compass_staging

# JWT Configuration (Staging)
JWT_SECRET=staging_jwt_secret_change_this_for_staging
JWT_EXPIRATION_TIME=15m

# File Upload Configuration (Staging)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50

# Redis Configuration (Staging)
REDIS_HOST=staging_redis_host
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_password
REDIS_CACHE_DB=0        # Database for caching
REDIS_QUEUE_DB=1        # Database for queues (separate from cache)

# Queue Configuration - Staging Settings (Medium concurrency)
QUEUE_CONCURRENCY_NOTIFICATIONS=15    # Medium concurrency for staging
QUEUE_CONCURRENCY_CHAT_AUTOMATION=8   # Max concurrent chat automation jobs
QUEUE_CONCURRENCY_ACADEMIC_SYNC=4     # Max concurrent academic sync jobs
QUEUE_CONCURRENCY_EMAIL=3             # Max concurrent email jobs
QUEUE_CONCURRENCY_MONITORING=2        # Max concurrent monitoring jobs

# Queue Monitoring - Staging Settings
QUEUE_DASHBOARD_ENABLED=true          # Enable dashboard in staging for testing
QUEUE_DASHBOARD_PORT=3001             # Port for queue dashboard
QUEUE_DASHBOARD_USERNAME=admin        # Dashboard basic auth username
QUEUE_DASHBOARD_PASSWORD=staging_dashboard_password

# Logging (Staging)
LOG_LEVEL=info

# Email Configuration (Staging)
SMTP_HOST=staging_smtp_host
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=staging_email@yourdomain.com
SMTP_PASS=staging_email_password
FROM_EMAIL=staging@mu-compass.edu

# CORS Configuration (Staging)
CORS_ORIGIN=https://staging.mu-compass.edu

# Rate Limiting (Staging)
RATE_LIMIT_WINDOW_MS=900000     # 15 minutes
RATE_LIMIT_MAX_REQUESTS=500     # Medium limit for staging

# Cloud Storage (Staging)
AWS_ACCESS_KEY_ID=staging_aws_access_key
AWS_SECRET_ACCESS_KEY=staging_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mu-compass-files-staging

# Firebase FCM Configuration (Staging)
FIREBASE_PROJECT_ID=mu-compass-staging
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@mu-compass-staging.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=staging_firebase_private_key
