            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newstudent@std.mans.edu.eg\",\n  \"firstName\": \"Ahmed\",\n  \"lastName\": \"Hassan\",\n  \"collegeId\": \"202012345\",\n  \"role\": \"STUDENT\",\n  \"phone\": \"+201234567890\",\n  \"currentYear\": 1,\n  \"departmentId\": \"dept-123\"\n}"
            },
            "url": {
